<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<%= link_to "New post", new_post_path, class: "btn btn-primary", style: "margin-bottom: 15px;" %>

<div class="card">
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">title</th>
          <th scope="col">body</th>
          <th scope="col">published</th>
          <th scope="col">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <th scope="row"><%= post.id %></th>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= post.body[0..100] %></td>
            <td><%= post.published %></td>
            <td><%= link_to "编辑", edit_post_path(post) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
